@{
    ViewData["Title"] = "Index";
}
@model List<ProductWithCategoryDto>

<table class="table table-striped">
    <thead>
        <tr>
            <!-- <th>Id</th> -->
            <th><a class="btn btn-info" asp-controller="Products" asp-action="Save" >New</a></th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>CreatedDate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
            @{int counter = 0;}
            @foreach (var item in Model)
            {
            <tr>
                    <td>@(++counter)</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Stock</td>
                    <td>@item.Category.Name</td>
                    <td>@item.CreatedDate</td>
                    <td><a class="btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                </tr>
            }
    </tbody>
</table>
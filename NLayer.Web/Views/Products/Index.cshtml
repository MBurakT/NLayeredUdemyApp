@{
    ViewData["Title"] = "Index";
}
@model List<ProductWithCategoryDto>

<div class="row">
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-info" asp-controller="Products" asp-action="Save">Create New Item</a>
    </div>
    <br/>
</div>
<div class="row">
    <div >
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Category</th>
                    <th>CreatedDate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 0;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@(++counter)</td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Stock</td>
                            <td>@item.Category.Name</td>
                            <td>@item.CreatedDate</td>
                            <td>
                                <a class="btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                <a class="btn btn-danger" asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>